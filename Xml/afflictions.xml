				<Affliction identifier="sb_death" amount="100" />
			</StatusEffect>
		</Effect>
	</Affliction>	
	
	<Affliction 
		identifier="sb_burn" 
		healableinmedicalclinic="false" 
		limbspecific="false" 
		indicatorlimb="Head" 
		showiconthreshold="1000"
		showinhealthscannerthreshold="1000"
		maxstrength="1">
		<Effect 
			minstrength="0" 
			maxstrength="1">
			<StatusEffect
				target="AllLimbs"
				delay="0.5">
				<Affliction identifier="miracleworker" amount="-100" />
				<Affliction identifier="burn" amount="1000" />
				<Affliction identifier="sb_death" amount="100" />
			</StatusEffect>
		</Effect>
	</Affliction>
	
	<Affliction 
		identifier="sb_death" 
		healableinmedicalclinic="false" 
		limbspecific="false" 
		indicatorlimb="Head"
		showiconthreshold="1000"
		showinhealthscannerthreshold="1000"
		maxstrength="1"
		causeofdeathdescription="afflictioncauseofdeath.suicided" 
		selfcauseofdeathdescription="afflictioncauseofdeathself.suicided">
		<Effect 
			minstrength="0" 
			maxstrength="1"			
			multiplybymaxvitality="true"
			minvitalitydecrease="10"
			maxvitalitydecrease="10">	
		</Effect>
	</Affliction>	
	
